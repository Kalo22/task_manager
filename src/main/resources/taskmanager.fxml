<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.taskmanager.TaskController">
    <top>
        <HBox spacing="10.0">
            <TextField fx:id="taskDescriptionField" promptText="Enter task description" HBox.hgrow="ALWAYS"/>
            <Button fx:id="addButton" text="Add Task"/>
        </HBox>
    </top>
    <center>
        <VBox spacing="10.0">
            <ListView fx:id="taskListView" VBox.vgrow="ALWAYS"/>
            <Button fx:id="deleteButton" text="Delete Task"/>
        </VBox>
    </center>
</BorderPane>
